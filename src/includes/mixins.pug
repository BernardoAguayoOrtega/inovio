//-variables
- let arrow = "fa fa-long-arrow-right"
- let plus = "fa fa-plus"
//- link of font awesome font
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css")
//-button mixin
mixin button(text)
    .button
        a(href="#") #{text}
            i(class=arrow)
//- card with image
mixin card-with-img(src,alt,text)
    .card-with-image
        figure
            img(src= src, alt= alt)
        h2=text
//- card without img
mixin card-without-img(title,text)
    .card-without-image
        h1=title   
        p=text
        a Read More 
            i(class=plus)